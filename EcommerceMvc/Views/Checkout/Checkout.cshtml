          @Html.ValidationSummary(true, "", new { @class = "text-danger" })
     <form class="form-horizontal" method="post"  name="CheckoutForm">
    <div class="row">
        <table>
            <thead>
            <tr>
                <th> Product</th>
                <th> Quantity</th>
                <th> Price</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var productData in Model.ProductsData)
            {
                <tr class="productData">
                    <td class="productsId" style="display: none" id="productId">
                        @productData.ProductData.Id
                    </td>
                    <td class="products" id="productName">
                        @productData.ProductData.ProductName
                    </td>
                    <td class="quantity" id="quantity">
                        <input type="text" value="@productData.Quantity" onkeyup="UpdatePrice(this)" />
                    </td>
                    <td class="originalPrice" style="display: none" id="originalPrice">
                        @productData.Price
                    </td>
                    <td class="price" id="calculatedPrice">
                        @productData.Price
                    </td>
                </tr>
            }
            </tbody>
            <tbody>
            <tr>
                <td> Total Price:</td>
                <td id="totalPrice">
                    @string.Format("{0:C}", @Model.TotalPriceOfAllProducts);
                </td>
            </tr>
            </tbody>
        </table>
    </div>

    <div class="form-group" id="checkout">
        <div class="col-md-offset-2 col-md-10">
            <input id="Checkout" class="col-md-offset-2 col-md-10" type="button" value="Checkout" onclick="ShowOtherStory()" />
        </div>
    </div>
