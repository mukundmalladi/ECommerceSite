            </tr>

            <tr>
                <td><label type="text">PoBox : </label></td>
                <td><input type="text" id="poBox" maxlength="20" /></td>
                @Html.ValidationMessageFor(model => model.PoBox)
            </tr>
            <tr>
                <td><label type="text">ZipCode : </label></td>
                <td><input type="text" id="zipCode" maxlength="20" /></td>
